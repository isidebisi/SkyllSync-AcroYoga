<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp">

    <LinearLayout
        android:id="@+id/trainingRowLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/trainingDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Training date"
            android:textSize="20sp"
            android:singleLine="false"
            android:maxLines="3"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/trainingDurationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Training duration"
            android:textSize="15sp"
            android:singleLine="false"
            android:maxLines="3"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_light"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/trainingDateTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/deleteTrainingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:layout_margin="16dp"
        android:src="@drawable/baseline_delete_24"
        android:clickable="true"/>



</androidx.cardview.widget.CardView>